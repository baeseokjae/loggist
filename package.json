{
  "name": "loggist",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"tsx watch --env-file .env src/server/index.ts\"",
    "dev:client": "vite",
    "dev:server": "tsx watch --env-file .env src/server/index.ts",
    "build:client": "vite build",
    "build:server": "tsup src/server/index.ts --format esm --out-dir dist/server --clean",
    "build": "pnpm run build:client && pnpm run build:server",
    "start": "NODE_ENV=production node dist/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check src/ tests/",
    "lint:fix": "biome check --write src/ tests/",
    "format": "biome format --write src/ tests/"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-select": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "@tanstack/react-query": "^5.67.0",
    "@tanstack/react-table": "^8.21.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^11.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "hono": "^4.7.0",
    "jose": "^6.0.0",
    "lttb": "^0.0.1",
    "lucide-react": "^0.470.0",
    "nuqs": "^2.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0",
    "tailwind-merge": "^3.0.0",
    "uplot": "^1.6.32",
    "ws": "^8.18.0",
    "zustand": "^5.0.0"
